{
  "name": "hakanai-bundler",
  "version": "1.0.0",
  "description": "Build tools for Hakanai TypeScript bundling",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rollup -c && npm run build:css",
    "build:watch": "rollup -c -w",
    "build:css": "csso ../server/includes/style.css -o ../server/includes/style.min.css",
    "test": "cd tests && npm test",
    "test:install": "cd tests && npm install"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "rollup": "^4.53.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "@peculiar/webcrypto": "^1.5.0",
    "ts-jest": "^29.4.6",
    "jsdom": "^27.3.0",
    "web-streams-polyfill": "^4.2.0",
    "csso-cli": "^4.0.2"
  }
}
