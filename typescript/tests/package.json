{
  "name": "hakanai-client-tests",
  "version": "1.0.0",
  "description": "Unit tests for Hakanai TypeScript client",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "^1.5.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^27.0.0",
    "ts-jest": "^29.4.3",
    "typescript": "^5.9.2",
    "web-streams-polyfill": "^4.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "https://localhost"
    },
    "setupFiles": [
      "<rootDir>/setup.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup.js"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^\\.\\/(.+)\\.js$": "./$1",
      "^\\.\\./(.+)\\.js$": "../$1"
    }
  }
}
